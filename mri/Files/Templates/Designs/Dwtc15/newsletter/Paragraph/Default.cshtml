<table width="580" class="deviceWidth" border="0" cellpadding="0" cellspacing="0" align="center" bgcolor="#eeeeed">
	@if (!string.IsNullOrWhiteSpace(GetString("ParagraphImageClean"))) {
		<tr>
			<td valign="top" style="padding:0" bgcolor="#ffffff">
				@{ var image = GetValue("ParagraphImageClean"); }
				<img class="deviceWidth" src="/Admin/Public/Getimage.ashx?width=580&height=450&compression=99&Crop=5&image=@image" alt="" border="0" style="display: block; border-top-left-radius: 4px;border-top-right-radius: 4px;" />
			</td>
		</tr>
	}
	<tr>
		<td style="font-size: 13px; color: #686868; font-weight: normal; text-align: left; font-family: PT Sans, Arial, sans-serif; line-height: 24px; vertical-align: top; padding:10px 8px 10px 8px" bgcolor="#eeeeed">
			@GetValue("ParagraphText")
			@GetValue("ParagraphModule")
		</td>
	</tr>
	<tr>
		<td bgcolor="#0085C9"><div style="height:6px">&nbsp;</div></td>
	</tr>  
</table>
<div style="height:15px">&nbsp;</div>
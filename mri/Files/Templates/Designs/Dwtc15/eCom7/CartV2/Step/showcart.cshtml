								<td class="text-right">@GetString("Ecom:Order.PaymentFee")</td>
							</tr>
							<tr>
								<td></td>
								<td></td>
								<td colspan="3">
									<i class="fa fa-truck"></i>&nbsp; @GetString("Ecom:Order.ShippingMethod")

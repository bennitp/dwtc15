<h2>@Translate("Subscribe for email", "Subscribe for email")</h2>

@foreach (LoopItem orderline in GetLoop("FormValidationErrors")){
	@GetValue("HeaderStart")
		<div id="errormessages">
			<ul>
	@GetValue("HeaderEnd")
				<li>@Translate("Error in the input field", "Error in the input field") @GetString("UserManagement:User.FormValidationError.FieldNiceName"): <a href="javascript:document.getElementById('@GetString("UserManagement:User.FormValidationError.FieldName")').focus();">@GetString("UserManagement:User.FormValidationError.Message")</a></li>
	@GetValue("FooterStart")
			</ul>
		</div>
	@GetValue("FooterEnd")
}

@GetValue("UserManagement:User.FormStart")
	<table>
		<tr>
			<th align="left">@Translate("Name", "Name"): </th>
			<td>@GetString("UserManagement:User.Name.Input")</td>
		</tr>
		<tr>
			<th align="left">@Translate("Email", "Email"): </th>
			<td>@GetString("UserManagement:User.Email.Input")</td>
		</tr>
      	<tr style="display: none;">
      		<th align="left">@Translate("I want to sign up", "I want to sign up"): </th>
			<td>
				<input name="UserManagement_Form_EmailAllowed" type="checkbox" id="UserManagement_Form_EmailAllowed" value="True" checked="checked" />
				@GetString("UserManagement:User.EmailAllowed.Hidden.Input")
			</td>
      	</tr>
	</table>
	<input type="submit" id="submitter" value="@Translate("Subscribe", "Subscribe")">
@GetValue("UserManagement:User.FormEnd")